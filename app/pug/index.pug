html(lang='en')
	head
		meta(charset='utf-8')

		title Maciej Łaszcz | nikerino.com

		meta(http-equiv='x-ua-compatible' content='ie=edge')

		meta(name='description' content='nikersify | Maciej Łaszcz - portfolio')

		meta(property='og:type' content='website')
